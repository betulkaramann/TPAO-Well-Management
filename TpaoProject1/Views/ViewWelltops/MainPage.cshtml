    <script>
                    
        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 6,
                center: {
                    lat: 38.934934, lng: 34.861613

                },
            });

            setMarkers(map);
        }

        @{
            List<object[]> wellCoordinates = new List<object[]>();

            foreach (var kuyu in Model.MapKuyular)
            {
                
                var name = kuyu.Name;
                double latitude = double.Parse(kuyu.Latitude);
                double longitude = double.Parse(kuyu.Longitude);
                var type = kuyu.WellTopType;
                
                wellCoordinates.Add(new object[] { name, latitude, longitude, wellCoordinates.Count() + 1, type });
            }
        }
        const welltops = @Html.Raw(Json.Serialize(wellCoordinates));

        function setMarkers(map) {
            
            const image = {

                url: "/css/orangedot.png",
                size: new google.maps.Size(32, 32),
                origin: new google.maps.Point(0, 0),
                anchor: new google.maps.Point(0, 32),
            };
            const image1 = {

                url: "/css/yellowdot.png",
                size: new google.maps.Size(32, 32),
                origin: new google.maps.Point(0, 0),
                anchor: new google.maps.Point(0, 32),
            };
            const image2 = {

                url: "/css/bluedot.png",
                size: new google.maps.Size(32, 32),
                origin: new google.maps.Point(0, 0),
                anchor: new google.maps.Point(0, 32),
            };
            
            const shape = {
                coords: [1, 1, 1, 20, 18, 20, 18, 1],
                type: "poly",
            };

            for (let i = 0; i < welltops.length; i++) {
                const welltop = welltops[i];


                if (welltop[4] == "tespit") {
                    const marker = new google.maps.Marker({
                        position: { lat: welltop[1], lng: welltop[2] },
                        map,
                        icon: image, // turuncu
                        shape: shape,
                        title: welltop[0],
                        zIndex: welltop[3],
                    });
                    
                    marker.addListener("click", () => {
                        const infoWindow = new google.maps.InfoWindow({
                            content: welltop[0], 
                        });
                        infoWindow.open(map, marker);
                    });
                }
                else if (welltop[4] == "üretim") {
                    const marker1 = new google.maps.Marker({
                        position: { lat: welltop[1], lng: welltop[2] },
                        map,
                        icon: image1, //sarı
                        shape: shape,
                        title: welltop[0],
                        zIndex: welltop[3],

                    });
                    
                    marker1.addListener("click", () => {
                        const infoWindow = new google.maps.InfoWindow({
                            content: welltop[0], 
                        });
                        infoWindow.open(map, marker1); 
                    });
                }
                else if (welltop[4] == "arama") {
                    const marker2 = new google.maps.Marker({
                        position: { lat: welltop[1], lng: welltop[2] },
                        map,
                        icon: image2, //mavi
                        shape: shape,
                        title: welltop[0],
                        zIndex: welltop[3],
                    });
                    
                    marker2.addListener("click", () => {
                        const infoWindow = new google.maps.InfoWindow({
                            content: welltop[0], 
                        });
                        infoWindow.open(map, marker2); 
                    });
                }
            }
        }

        window.initMap = initMap;

